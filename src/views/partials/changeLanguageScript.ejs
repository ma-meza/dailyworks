<script>
  document.getElementById('langSelect').onchange = function(){
    $.ajax({
          url: '/setlangCookie',
          type: 'post',
          data: {lang:this.value},
          success: function( data, textStatus){
            if(data=="ok"){
              location.reload();
            }else if(data=="error"){
              alert("error");
            }else{
              alert("error");
            }
          },
          error: function( textStatus, errorThrown ){
              console.log( errorThrown );
          }
      });
  }
</script>
